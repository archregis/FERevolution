@font-face {
    font-family: 'Merriweather';
    font-style: normal;
    font-weight: 300;
    src: url('https://fonts.gstatic.com/s/merriweather/v17/ZvcMqxEwPfh2qDWBPxn6nk4GofcKVZz6wtzX_QUIqsI.woff2') format('woff2');
}

/* Common Variables */
:root {
    --color-primary-bg: #353535;
    --color-secondary-bg: #f3f3f3;
    --color-primary-text: #000;
    --color-secondary-text: #f3f3f3;
    --color-header-text: #fff;
    --border-color: #f3f3f3;
}

/* Utility Classes */
.inline-block { display: inline-block; }
.no-padding { padding: 0; }
.no-margin { margin: 0; }
.black-text { color: #000; }
.white-text { color: #fff; }
.nowrap { white-space: nowrap; }

.sheet-input-75 { width: 75px; }
.sheet-input-55 { width: 55px; }
.sheet-input-40 { width: 40px; }
.sheet-select-80 { width: 80px; }
.sheet-select-65 { width: 65px; }

.sheet-notes-textarea { width: 215px; height: 300px; }
.sheet-supportlist-textarea { width: 350px; height: 500px; }
.sheet-quartzlist-textarea { width: 350px; height: 400px; }
.sheet-equiplist-textarea { width: 350px; height: 400px; }

/* Main Container */
.sheet-maindiv {
    width: 840px;
}

/* Tab display */
.sheet-character,
.sheet-equip,
.sheet-misc {
    display: none;
}
.sheet-tabstoggle[value="character"] ~ div.sheet-character,
.sheet-tabstoggle[value="equip"] ~ div.sheet-equip,
.sheet-tabstoggle[value="misc"] ~ div.sheet-misc {
    display: block;
}

.charsheet {
    background-color: var(--color-primary-bg);
    font-family: "Merriweather";
    font-size: 11px;
    min-height: 100%;
    min-width: 100%;
    clear: both;
    overflow: auto;
}

.charsheet .sheet-mainstats,
.charsheet .sheet-checks,
.charsheet .sheet-wepprof,
.charsheet .sheet-inventory,
.charsheet .sheet-prowess {
    overflow: hidden;
}

.charsheet .sheet-charinfo,
.charsheet .sheet-mainstats,
.charsheet .sheet-currentvals {
    background-color: var(--color-secondary-bg);
    width: 100%;
    display: inline-block;
    margin-bottom: 10px;
}

.charsheet .sheet-abilityinfo,
.charsheet .sheet-supportinfo {
    background-color: var(--color-secondary-bg);
    padding-left: 5px;
    display: inline-block;
    margin-bottom: 10px;
    margin-right: 5px;
    margin-left: 5px;
    border-right: var(--color-secondary-bg) 4px solid;
    border-left: var(--color-secondary-bg) 4px solid;
}

.charsheet .sheet-checks {
    background-color: var(--color-secondary-bg);
    width: 27%;
    padding: 0 5px;
    float: right;
    display: inline-block;
    clear: both;
    margin-bottom: 10px;
}

.charsheet .sheet-prowess {
    background-color: var(--color-secondary-bg);
}

#left-column {
    float: left;
    width: 72%;
}

#notes-sheet {
    float: right;
    width: 27%;
}

.charsheet table {
    font-size: 13px;
    width: 100%;
    border-right: var(--color-secondary-bg) 4px solid;
    border-bottom: var(--color-secondary-bg) 4px solid;
}

.sheet-charinfo table {
    border-collapse: collapse;
    width: auto;
    color: #000;
}
.sheet-charinfo table tr {
    line-height: 1;
    margin: 0;
    padding: 0;
    color: #000;
}
.sheet-charinfo table td {
    padding: 0 5px;
}
.sheet-charinfo table td:first-child {
    padding: 0 5px 0 0;
}

.charsheet .sheet-header {
    text-align: center;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 15px;
    padding: 3px;
    background-color: var(--color-primary-bg);
    color: var(--color-header-text);
    border: var(--color-secondary-bg) 4px solid;
    border-bottom-width: 2px;
    font-weight: bold;
    margin-bottom: 5px;
}

.charsheet .sheet-div {
    background-color: var(--color-primary-bg);
}

.charsheet .sheet-statlabel,
.charsheet .sheet-labelrow {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: bold;
    background-color: var(--color-primary-bg);
    color: var(--color-secondary-text);
    text-transform: uppercase;
}

.charsheet .sheet-weapons,
.charsheet .sheet-spells {
    vertical-align: top;
    background-color: var(--color-secondary-bg);
    display: inline-block;
    width: 45%;
}

.charsheet input.sheet-toggle-stats {
    border: none;
    margin-bottom: 2vh;
    margin-left: 1vw;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    width: 16px;
    height: 16px;
}
.charsheet input.sheet-toggle-stats::after {
    content: "⏷";
}
.charsheet input.sheet-toggle-stats:checked::after {
    content: "⏶";
}

.charsheet .sheet-hiddenstats {
    display: none;
}
.charsheet .sheet-hiddenskill {
    display: none;
    margin-left: 8px;
    margin-top: 10px;
}
.charsheet input.sheet-toggle-stats:checked ~ .sheet-hiddenstats {
    display: table;
}
.charsheet input.sheet-toggle-stats:checked ~ .sheet-hiddenskill {
    display: inline-block;
}

/* Prowess Table Layout */
.sheet-prowess table {
    table-layout: fixed;
    border-collapse: collapse;
    border-spacing: 0;
    width: 40%;
}
.sheet-prowess th,
.sheet-prowess td {
    padding: 0;
    vertical-align: middle;
    text-align: right;
    font-size: 11px;
    white-space: nowrap;
}
.sheet-prowess th:first-child,
.sheet-prowess td:first-child {
    text-align: left;
    white-space: nowrap;
}

.sheet-prowess input[type="text"],
.sheet-prowess input[type="number"] {
    display: inline-block;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-size: 11px;
    vertical-align: middle;
    width: 100%;
    border-collapse: collapse;
}